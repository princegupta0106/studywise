{
  "manifest_version": 3,
  "name": "Course Bulk Downloader",
  "version": "1.1",
  "description": "Downloads entire courses by automatically expanding folders and collecting all files.",
  "permissions": [
    "downloads",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Course Bulk Downloader"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
